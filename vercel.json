{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/$1" },

    { "source": "/assets/(.*)", "destination": "/assets/$1" },

    {
      "source": "/((?!api/|assets/|favicon\\.ico|robots\\.txt|sitemap\\.xml|manifest\\.webmanifest).*)",
      "destination": "/index.html"
    }
  ]
}
