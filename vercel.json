{
  "$schema": "https://openapi.vercel.sh/vercel.json",

  "redirects": [
    {
      "source": "/(.*)",
      "has": [{ "type": "host", "value": "zomorodmedical.com" }],
      "destination": "https://www.zomorodmedical.com/$1",
      "permanent": true
    }
  ],

  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/$1" },
    {
      "source": "/((?!api/|assets/|favicon\\.ico|robots\\.txt|sitemap\\.xml|manifest\\.webmanifest|ping\\.html).*)",
      "destination": "/index.html"
    }
  ],

  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    },
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "no-store" }
      ]
    },
    {
      "source": "/((?!api/|assets/).*)",
      "headers": [
        { "key": "Cache-Control", "value": "no-store" }
      ]
    }
  ]
}
